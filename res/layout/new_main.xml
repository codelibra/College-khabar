<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#FCFECC"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/mocktest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/searchcompany"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Take Mock Test" />

    <Button
        android:id="@+id/leaderboardbutton1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="23dp"
        android:background="@drawable/custom" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_below="@+id/leaderboardbutton1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/searchcompany"
        android:autoText="true"
        android:background="@drawable/rounded_corners_new"
        android:ems="10"
        android:gravity="center"
        android:hint="Search!\n Ex: AMAZON"
        android:lines="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/autoCompleteTextView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/autoCompleteTextView1"
        android:layout_alignParentRight="true"
        android:background="@drawable/custom3" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/trysplash" />

    <Button
        android:id="@+id/searchcompany"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/autoCompleteTextView1"
        android:layout_alignBottom="@+id/autoCompleteTextView1"
        android:layout_alignLeft="@+id/button3"
        android:background="@drawable/search_button"
        android:text="Search"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>